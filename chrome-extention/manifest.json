{
    "manifest_version": 3,
    "name": "Web Chat AI",
    "version": "1.0",
    "description": "Chat with AI about any webpage",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {},
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "chat.css",
                "chat.html"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}